<Window x:Class="_5lab.Check"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5lab"
        mc:Ignorable="d"
        Title="Check" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="CheckDgr" AutoGenerateColumns="True" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Добавить" Click="Button_ClickAddCheck" />
            <Button Content="Удалить" Click="Button_ClickDelCheck" />
            <Button Content="Изменить" Click="Button_ClickChCheck" />
        </StackPanel>
    </Grid>
</Window>
