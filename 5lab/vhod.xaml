<Window x:Class="_5lab.vhod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5lab"
        mc:Ignorable="d"
        Title="vhod" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox x:Name="textBoxLogin" Width="250" Height="100" Margin="0,0,10,0" />
            <PasswordBox x:Name="passwordBox" Width="250" Height="100" Margin="0,0,10,0" />
            <Button x:Name="buttonLogin" Content="Войти" Width="250" Height="100" Click="ButtonLogin_Click" />
        </StackPanel>
    </Grid>
</Window>
